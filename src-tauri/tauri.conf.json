{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Heinz Interfaces Laboratory",
    "shortDescription": "Agent-native molecular visualization",
    "longDescription": "Axiom is a next-generation atomic visualization platform designed for AI agents and computational chemistry.",
    "category": "public.app-category.education"
  },
  "productName": "Axiom",
  "version": "0.1.0",
  "identifier": "com.heinzlab.axiom",
  "plugins": {},
  "security": {
    "capabilities": [
      {
        "identifier": "main",
        "description": "Main application capabilities",
        "permissions": [
          "core:default",
          "core:window:default",
          "core:window:allow-close",
          "core:window:allow-hide",
          "core:window:allow-maximize",
          "core:window:allow-minimize",
          "core:window:allow-show",
          "core:window:allow-start-dragging",
          "dialog:default",
          "dialog:allow-open",
          "dialog:allow-save",
          "dialog:allow-message",
          "dialog:allow-ask",
          "dialog:allow-confirm",
          "fs:default",
          "fs:allow-read-file",
          "fs:allow-write-file",
          "fs:allow-exists",
          "fs:allow-read-dir",
          "fs:allow-read-text-file",
          "fs:allow-write-text-file",
          "shell:default"
        ],
        "windows": ["main"]
      }
    ]
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Axiom",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
