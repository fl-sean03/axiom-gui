{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Heinz Interfaces Laboratory",
    "shortDescription": "Agent-native molecular visualization",
    "longDescription": "Axiom is a next-generation atomic visualization platform designed for AI agents and computational chemistry.",
    "category": "public.app-category.education"
  },
  "productName": "Axiom",
  "version": "0.2.8",
  "identifier": "com.heinzlab.axiom",
  "plugins": {},
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Axiom",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  }
}
